<h1>Are u Genius??</h1>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p>What's the longest word?</p>

<form action="/score" method="POST" class="form-inline" id="search-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="input-group">
    <input type="text" name="word" class="form-control">
    <div class="input-group-btn">
      <input type="submit" value="Submit!" class="btn btn-default" id="end-submit">
    </div>
  </div>
</form>

<div id="time"></div>
<div id="result"></div>
