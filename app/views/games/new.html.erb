<h1>Are u Genius??</h1>

<button type="button" class="btn btn-primary" id="start-button" onclick="this.startTime=performance.now();event.preventDefault();">Start New Game</button>
<button type="button" class="btn btn-primary" id="end-button">End Game</button>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p>What's the longest word?</p>

<form action="/score" method="POST" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="input-group">
    <input type="text" name="word" class="form-control">
    <div class="input-group-btn">
      <input type="submit" value="Submit!" class="btn btn-default" id="end-submit">
    </div>
  </div>
</form>
